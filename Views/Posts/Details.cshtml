@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SocialNetworkApp.Models.Post

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <h2>@Model.Title</h2>
    <p>@Model.Content</p>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" class="img-fluid mb-3" />
    }

    <p><strong>@Localizer["Community"]:</strong> @(Model.Community?.Name ?? Localizer["NotSpecified"].ToString())</p>
    <p><strong>@Localizer["Author"]:</strong> @(Model.ApplicationUser?.UserName ?? Localizer["Anonymous"].ToString())</p>
    <p><strong>@Localizer["Created"]:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <span class="badge badge-success">@Model.PostLikes.Count(pl => pl.IsLike) üëç</span>
            <span class="badge badge-danger">@Model.PostLikes.Count(pl => !pl.IsLike) üëé</span>
            <span class="badge badge-info">@Model.Comments.Count üí¨</span>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div>
                <form asp-controller="PostLikes" asp-action="ToggleLike" method="post" class="d-inline">
                    <input type="hidden" name="postId" value="@Model.Id" />
                    <input type="hidden" name="isLike" value="true" />
                    <button type="submit" class="btn btn-sm btn-success">üëç</button>
                </form>
                <form asp-controller="PostLikes" asp-action="ToggleLike" method="post" class="d-inline">
                    <input type="hidden" name="postId" value="@Model.Id" />
                    <input type="hidden" name="isLike" value="false" />
                    <button type="submit" class="btn btn-sm btn-danger">üëé</button>
                </form>
            </div>
        }
    </div>

    <h5>@Localizer["Tags"]:</h5>
    <ul>
        @foreach (var pt in Model.PostTags)
        {
            <li>@(pt.Tag?.Name ?? "Unknown Tag")</li>
        }
    </ul>

    <hr />

    <h4>@Localizer["Comments"] (@Model.Comments.Count)</h4>
    @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
    {
        <div class="card mb-3">
            <div class="card-body">
                <p>@comment.Text</p>
                <small class="text-muted">@Localizer["Author"]: @(comment.ApplicationUser?.UserName ?? Localizer["Anonymous"].ToString()) | @comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                @if (User.Identity.IsAuthenticated && (comment.ApplicationUserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value || User.IsInRole("Moderator") || User.IsInRole("Admin")))
                {
                    <form asp-controller="Comments" asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@comment.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('@Localizer["ConfirmDeleteComment"]')">@Localizer["Delete"]</button>
                    </form>
                }
            </div>
        </div>
    }

    <hr />

    @if (User.Identity.IsAuthenticated)
    {
        <h4>@Localizer["AddComment"]</h4>
        <form asp-controller="Comments" asp-action="Create" method="post">
            <input type="hidden" name="PostId" value="@Model.Id" />
            <div class="form-group">
                <textarea name="Text" class="form-control" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-success mt-2">@Localizer["Send"]</button>
        </form>
    }
    else
    {
        <p>@Localizer["LoginToComment"] <a asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a></p>
    }
</div>
