@model SocialNetworkApp.Models.Community
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CreateCommunity"];
}

<div class="container mt-4">
    <h2>@Localizer["CreateCommunity"]</h2>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">@Localizer["CommunityName"]</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label">@Localizer["CommunityDescription"]</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
        <a asp-action="Index" class="btn btn-secondary">@Localizer["Back"]</a>
    </form>
</div>
