@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SocialNetworkApp.Models.Comment

@{
    ViewData["Title"] = Localizer["EditComment"];
}

<div class="container mt-4">
    <h2>@Localizer["EditComment"]</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group mb-3">
            <label asp-for="Text" class="form-label">@Localizer["CommentText"]</label>
            <textarea asp-for="Text" class="form-control"></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
        <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-secondary">@Localizer["Back"]</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
