@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SocialNetworkApp.Models.Comment

@{
    ViewData["Title"] = Localizer["DeleteComment"];
}

<div class="container mt-4">
    <h2>@Localizer["DeleteComment"]</h2>
    <h3>@Localizer["ConfirmDeleteComment"]</h3>
    
    <div class="card">
        <div class="card-body">
            <p>@Model.Text</p>
            <small class="text-muted">@Model.CreatedAt.ToString("g")</small>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
        <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-secondary">@Localizer["Cancel"]</a>
    </form>
</div>
