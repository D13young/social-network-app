@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SocialNetworkApp.Models.ApplicationUser

@{
    ViewData["Title"] = Localizer["UserProfile"];
}

<div class="container mt-4">
    <h2>@Localizer["UserProfile"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @section Scripts {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var triggerTabList = [].slice.call(document.querySelectorAll('#profileTabs a'))
                triggerTabList.forEach(function (triggerEl) {
                    var tabTrigger = new bootstrap.Tab(triggerEl)

                    triggerEl.addEventListener('click', function (event) {
                        event.preventDefault()
                        tabTrigger.show()
                    })
                })
            });
        </script>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.AvatarPath))
                    {
                        <img src="@Model.AvatarPath" alt="Avatar" class="img-fluid rounded-circle mb-3" style="max-width: 150px; max-height: 150px;" />
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px;">
                            <span class="text-white" style="font-size: 4rem;">@Model.UserName?.Substring(0, 1).ToUpper()</span>
                        </div>
                    }
                    <h5 class="card-title">@Model.UserName</h5>
                    <p class="card-text">
                        <strong>@Localizer["FirstName"]:</strong> @Model.FirstName<br />
                        <strong>@Localizer["LastName"]:</strong> @Model.LastName<br />
                        <strong>@Localizer["Email"]:</strong> @Model.Email<br />
                        <strong>@Localizer["Phone"]:</strong> @Model.PhoneNumber<br />
                        <strong>@Localizer["RegistrationDate"]:</strong> @Model.RegistrationDate.ToString("dd.MM.yyyy")<br />
                        <strong>@Localizer["PostsCount"]:</strong> @Model.PostsCount<br />
                        <strong>@Localizer["CommentsCount"]:</strong> @Model.CommentsCount<br />
                        <strong>@Localizer["LikesCount"]:</strong> @Model.LikesCount<br />
                        <strong>@Localizer["Status"]:</strong> @(Model.IsBanned ? Localizer["Banned"] : Localizer["Active"])
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <ul class="nav nav-tabs" id="profileTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="posts-tab" data-bs-toggle="tab" href="#posts" role="tab">@Localizer["MyPosts"] (@ViewBag.UserPosts.Count)</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="comments-tab" data-bs-toggle="tab" href="#comments" role="tab">@Localizer["MyComments"] (@ViewBag.UserComments.Count)</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="edit-tab" data-bs-toggle="tab" href="#edit" role="tab">@Localizer["EditProfile"]</a>
                </li>
            </ul>

            <div class="tab-content" id="profileTabsContent">
                <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                    @if (ViewBag.UserPosts.Count > 0)
                    {
                        <div class="row mt-3">
                            @foreach (var post in ViewBag.UserPosts)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="card-title">@post.Title</h6>
                                            <p class="card-text">@(post.Content?.Substring(0, Math.Min(post.Content.Length, 100)) + "...")</p>
                                            <small class="text-muted">@post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                            <div class="mt-2">
                                                <span class="badge badge-success">@post.PostLikes.Count üëç</span>
                                                <span class="badge badge-info">@post.Comments.Count üí¨</span>
                                            </div>
                                            <a asp-action="Details" asp-controller="Posts" asp-route-id="@post.Id" class="btn btn-sm btn-primary mt-2">@Localizer["View"]</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="mt-3">@Localizer["NoPostsYet"]</p>
                    }
                </div>

                <div class="tab-pane fade" id="comments" role="tabpanel" aria-labelledby="comments-tab">
                    @if (ViewBag.UserComments.Count > 0)
                    {
                        <div class="mt-3">
                            @foreach (var comment in ViewBag.UserComments)
                            {
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <p>@comment.Text</p>
                                        <small class="text-muted">@Localizer["Post"]: <a asp-action="Details" asp-controller="Posts" asp-route-id="@comment.PostId">@comment.Post.Title</a> | @comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="mt-3">@Localizer["NoCommentsYet"]</p>
                    }
                </div>

                <div class="tab-pane fade" id="edit" role="tabpanel" aria-labelledby="edit-tab">
                    <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data" class="mt-3">
                        <div class="form-group">
                            <label asp-for="FirstName">@Localizer["FirstName"]</label>
                            <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">@Localizer["LastName"]</label>
                            <input asp-for="LastName" class="form-control" value="@Model.LastName" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber">@Localizer["Phone"]</label>
                            <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                        </div>
                        <div class="form-group">
                            <label for="AvatarFile">@Localizer["Avatar"]</label>
                            <input type="file" name="AvatarFile" id="AvatarFile" class="form-control-file" accept="image/*" />
                            <small class="form-text text-muted">@Localizer["SelectImageForAvatar"]</small>
                        </div>
                        <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
